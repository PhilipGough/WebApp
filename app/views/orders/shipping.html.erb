  <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          Select a shipping address
        </h3>
      </div>
      <div class="panel-body" style="padding:10px" "border-right:1px solid #ccc">
        <div class="row">
           <% @saved_add.each do |add| %>
          <div class="col-md-3" style="border-right:1px solid #ccc">
            <p><%=simple_format(add.to_s)%></p>
              <div class="btn-group">
                 <%= link_to "Select!",{:controller => "orders", :action => "billing",
                  :name => "shipping_address" ,:value => add.id},method: :get, class: "btn btn-info" %>
                 <%= link_to "Edit!",{:controller => :addresses, :action => :edit, :id => add.id, :page => "shipping"},method: :get, class: "btn btn-warning " %>
                 <%= link_to "Delete!",{:controller => :addresses, :action => :destroy, :id => add.id},method: :delete, class: "btn btn-danger " %>
        </div>
          </div>
          <%end%>
      </div>
    </div>
    <hr>
<%= render "addresses/new" %>
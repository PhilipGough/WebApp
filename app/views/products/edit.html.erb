<% provide(:title, "Products") %>
<% if current_user && current_user.admin? %>
<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-3">
            <%= render 'layouts/admin' %> 
        </div> 

        <div class="col-sm-9 col-md-9">
            <div class="well">
                <h1>
                    Edit Product</h1>
                    <%= form_for(@product) do |f| %>
                    <%= render 'shared/error_products' %>

                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control' %>

                    <%= f.label :description %>
                    <%= f.text_area  :description, size: '24x8' %>

                    <%= f.label :avatar , "Change Image" %>
                    <%= f.file_field :avatar %>
                    <br></br>
                    <%= f.label :price %>
                    <%=f.number_field :price, :class => 'form-control', :step => 0.01%>

                    <%= f.label :quantity %>
                    <%= f.number_field :quantity, class: 'form-control' %>

                    <%= f.submit "Change product", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
            <% else %>  
            <%= render 'layouts/no_permission' %> 
            <% end %>  



<script>$(document).ready(function(){$('input[type=file]').bootstrapFileInput();});</script>
<% provide(:title, "Users") %>
<% if current_user && current_user.admin? %>
<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-3">
            <%= render 'layouts/admin' %> 
        </div> 
        <div class="col-sm-9 col-md-9">
            <div class="well">
                <h1>
                    All users</h1>
                    <ul class="users">
                        <% @users.each do |user| %>
                        <li>
                         <%= link_to user.name, user %>
                     </li>
                     <% end %>
                 </ul>
             </div>
         </div>
         <% else %>  
         <%= render 'layouts/no_permission' %> 
         <% end %>  


